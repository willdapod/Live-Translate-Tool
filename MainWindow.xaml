<Window x:Class="LiveTranslateTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Live Translator" Height="600" Width="800">
    <Grid x:Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="10" Grid.Row="0" x:Name="TopBar">
            <Button Content="Load Test Image" Click="LoadTestImage_Click" Margin="0,0,10,0"/>
        </StackPanel>

        <Grid Grid.Row="1">
            <Image x:Name="VideoImage" Stretch="Uniform"/>
        </Grid>
    </Grid>
</Window>
    
